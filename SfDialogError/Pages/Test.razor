@using Syncfusion.Blazor.Popups
@using Syncfusion.Blazor.Buttons
@inject IJSRuntime JSRuntime

@page "/test"

<SfButton @onclick="@OpenDialog">Open Dialog (Not Required)</SfButton>

<SfButton @onclick="@Close">Close This Window - Wait 60 seconds For Error</SfButton>

<SfDialog Width="250px" ShowCloseIcon="true" IsModal="true" @bind-Visible="@IsVisible">
    <DialogTemplates>
        <Header> Dialog </Header>
        <Content> This is a dialog with header </Content>
    </DialogTemplates>
</SfDialog>

@code {

    private bool IsVisible { get; set; }

    private void OpenDialog()
    {
        this.IsVisible = true;
    }

    private async Task Close()
    {
        await JSRuntime.InvokeVoidAsync("CloseWindow");
    }
}